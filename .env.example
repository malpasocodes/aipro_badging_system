# AIPPRO Badging System Environment Configuration
# Copy this file to .env and update the values as needed

# Application Settings
APP_NAME="AIPPRO Badging System"
APP_VERSION="0.1.0"
APP_ENV="development"  # development, staging, production
DEBUG="true"

# Logging
LOG_LEVEL="INFO"  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Database Configuration
# Development (SQLite): sqlite:///./badging_system.db
# Production (PostgreSQL): postgresql://user:password@host:port/dbname
DATABASE_URL="sqlite:///./badging_system.db"

# Authentication Configuration
# Get your Google OAuth Client ID from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your_google_client_id.apps.googleusercontent.com"

# Admin Configuration
# Comma-separated list of admin email addresses
# These users will automatically receive admin role upon login
ADMIN_EMAILS="admin@example.com,admin2@example.com"

# Development Settings
# Set to false in production
STREAMLIT_SERVER_HEADLESS="false"
STREAMLIT_SERVER_PORT="8501"

# Database Debugging (SECURITY WARNING: Exposes SQL queries with sensitive data)
# Only enable for local debugging - NEVER in production
# DATABASE_ECHO="false"

